{
    "name": "kentjerone/laravel-chain-rule",
    "description": "A chainable rule builder for Laravel validation.",
    "type": "library",
    "keywords": [
        "laravel",
        "validation",
        "rules",
        "chainable",
        "fluent",
        "builder",
        "form-request"
    ],
    "require": {
        "php": "^8.2",
        "illuminate/support": "^12.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0",
        "orchestra/testbench": "^10.0",
        "laravel/pint": "^1.16",
        "phpstan/phpstan": "^2.1"
    },
    "autoload": {
        "psr-4": {
            "KentJerone\\ChainRule\\": "src/"
        },
        "files": [
            "src/Helpers/chain_rule_helper.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "KentJerone\\ChainRule\\Tests\\": "tests/"
        }
    },
    "license": "MIT",
    "authors": [
        {
            "name": "ramosramosramos",
            "email": "ramosramosramosramos12@gmail.com"
        }
    ],
    "support": {
        "issues": "https://github.com/ramosramosramos/laravel-chain-rule/issues",
        "source": "https://github.com/ramosramosramos/laravel-chain-rule",
        "docs": "https://github.com/ramosramosramos/laravel-chain-rule#readme"
    },
    "minimum-stability": "stable",
    "scripts": {
        "format": [
            "vendor/bin/phpstan analyse",
            "vendor/bin/pint"
        ]
    }
}
