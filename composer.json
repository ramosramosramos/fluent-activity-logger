{
    "name": "kentjerone/laravel-chain-rule",
    "description": "A chainable rule builder for Laravel validation.",
    "type": "library",
    "require": {
        "php": "^8.2",
        "illuminate/support": "^11.0 || ^12.0"
    },
    "autoload": {
        "psr-4": {
            "KentJerone\\ChainRule\\": "src/"
        },
        "files": [
            "src/Helpers/chain_rule_helper.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "KentJerone\\ChainRule\\Tests\\": "tests/"
        }
    },
    "license": "MIT",
    "authors": [
        {
            "name": "ramosramosramos",
            "email": "ramosramosramosramos12@gmail.com"
        }
    ],
    "minimum-stability": "stable",
    "require-dev": {
        "phpunit/phpunit": "^10.5",
        "laravel/pint": "^1.16",
        "phpstan/phpstan": "^1.10",
        "orchestra/testbench": "^9.0 || ^10.0"
    },
    "suggest": {
        "orchestra/testbench": "For Laravel testing (use ^9.0 for Laravel 11)"
    },
    "scripts": {
        "format": [
            "vendor/bin/phpstan analyse",
            "vendor/bin/pint"
        ]
    }
}
